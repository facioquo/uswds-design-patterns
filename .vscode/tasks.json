{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      // Local dev server (ng serve)
      "label": "start",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": [
        {
          // Parse TS diagnostics that Angular CLI prints
          "owner": "typescript",
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            // Start tracking immediately
            "beginsPattern": {
              "regexp": ".+"
            },
            // Angular dev server (Vite) prints the Local URL when ready
            "endsPattern": {
              "regexp": "Local: http://localhost:[0-9]+/?"
            }
          }
        }
      ]
    },
    {
      "label": "verify",
      "type": "npm",
      "script": "verify",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"],
      "detail": "Run lint, build, unit tests with coverage, and e2e tests"
    }
  ]
}
